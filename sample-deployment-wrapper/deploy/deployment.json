{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "name": "pullie"
    },
    "name": "pullie"
  },
  "spec": {
    "replicas": 5,
    "selector": {
      "matchLabels": {
        "name": "pullie"
      },
      "name": "pullie",
      "service": "pullie"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "pullie",
          "service": "pullie"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
               { "name": "NODE_ENV",
                 "value": "production" }
	          ],
            "image": "path to the docker image of this wrapper (e.g on artifactory or other docker registry)",
            "imagePullPolicy": "IfNotPresent",
            "name": "pullie",
            "ports": [
              {
                "containerPort": 3000
              }
            ],
            "livenessProbe":
            {
              "httpGet":
              {
                "path": "/healthcheck.html",
                "port": 3000
              },
              "initialDelaySeconds": 15,
              "timeoutSeconds": 1
            },
            "readinessProbe":
            {
              "httpGet":
              {
                "path": "/healthcheck.html",
                "port": 3000
              },
              "initialDelaySeconds": 15,
              "timeoutSeconds": 1
            },
            "volumeMounts": [
              {
                "name": "secrets",
                "mountPath": "/etc/pullie",
                "readOnly": true
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "secrets",
            "secret": {
              "secretName": "pullie.production.secrets"
            }
          }
        ],
        "imagePullSecrets": [
          {
            "name": "docker.artifactory"
          }
        ]
      }
    }
  }
}
